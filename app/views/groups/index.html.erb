<h1>Listing groups</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Show', group, class:'btn btn-default' %>
        <%= link_to 'Edit', edit_group_path(group) , class:'btn btn-default'%>
        <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path , class:'btn btn-primary'%>
