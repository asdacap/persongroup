
<%= form_for(@person) do |f| %>
<div class="form-horizontal">
    <div class="form-group">
        <%= f.label :name, class: 'form-label col-md-4' %>
        <div class="col-md-8">
            <% @person.errors[:name].each { |s| %>
            <%= s %><br />
            <% } %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :address, class: 'form-label col-md-4'  %>
        <div class="col-md-8">
            <% @person.errors[:address].each { |s| %>
            <%= s %><br />
            <% } %>
            <%= f.text_field :address, class: 'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :phone, class: 'form-label col-md-4'  %>
        <div class="col-md-8">
            <% @person.errors[:phone].each { |s| %>
            <%= s %><br />
            <% } %>
            <%= f.text_field :phone, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8"><%= f.submit :submit , class: 'btn btn-primary' %></div>
    </div>
</div>
<% end %>
